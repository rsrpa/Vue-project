<template>
  <v-skeleton-loader
    :loading="!local{{capitalize name}}"
    transition="expand-transition"
    type="article"
  >
    <v-container grid-list-xs v-if="local{{capitalize name}}">
      <v-col cols="12">
        TODO: ./artwork/{{type}}s/{{fileName}}.png
      </v-col>
      <v-col cols="12">
        <v-alert
          type="info"
        >
          Example: A simple text field with a save button and a skeleton loader.
        </v-alert>
        <v-text-field
          label="Example Text"
          v-model="local{{capitalize name}}.name"
        ></v-text-field>
        <v-btn color="success" @click="save">Save</v-btn>
      </v-col>
    </v-container>
  </v-skeleton-loader>
</template>

<script>
import {
  VAlert, VBtn, VSkeletonLoader, VTextField,
} from 'vuetify/lib';

export default {
  components: {
    VAlert,
    VBtn,
    VSkeletonLoader,
    VTextField,
  },
  name: '{{fileName}}',
  props: {
    /**
    * Set the text box value. Default: undefined,
    */
    {{name}}: {
      type: Object,
      default: undefined,
    },
  },
  data() {
    return {
      /**
      * Local value used for property text
      */
      local{{capitalize name}}: undefined,
    };
  },
  computed: {
    /**
    * Get the loading state of the component
    */
    isLoading() {
      return this.{{name}} === undefined;
    },
  },
  watch: {
    text() {
      this.local{{capitalize name}} = this.{{name}};
    },
  },
  created() {
    this.local{{capitalize name}} = this.{{name}};
  },
  methods: {
    /** Method used to save the item
     */
    save() {
      /** Triggered when phone is updated.
      * @event save
      * @type {object}
      */
      this.$emit('save', { {{name}}: this.local{{capitalize name}} });
    },
  },
};
</script>

